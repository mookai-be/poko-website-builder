<div
  class="grid-fluid {{ class }}"
  style="--columns: {{columns or 'unset'}}; --gap-grid: {{gap or '1em'}}; {{ '--width-column-min:' + widthColumnMin + ';' if widthColumnMin or '' }} {{ '--width-column-max:' + widthColumnMax + ';' if widthColumnMax or '' }}"
>
{% for block in blocks %} {% if block.type == "markdown" %}
<div class="block-markdown {{ block.class }}">
  {{ block.value | renderContent("njk,md", { languages: languages, collections: collections }) | safe }}
</div>
{% endif %} {% if block.type == "image" %} <img
{{ block | htmlImgAttrs({ type: null, class: 'block-image ' + (block.class or '') }) }}
/> {% endif %} {% endfor %}
</div>
